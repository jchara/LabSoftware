<%= form_for(@producers) do |f| %>

    <% @producers.errors.full_messages.each do |message| %>
        <div class="be-red top-space">
            !!! <%= message %>
        </div>
    <%end%>

    <%= f.text_field :document_type, placeholder: "Tipo Documento", class: "form-control" %>
    <%= f.text_field :document_number, placeholder: "Numero de Documento", class: "form-control" %>
    <%= f.text_field :name, placeholder: "Nombre", class: "form-control" %>
    <%= f.text_field :lastname, placeholder: "Apellido", class: "form-control" %>
    <%= f.submit "Guardar", class:"btn be-green" %>
<%end%>