<!doctype html>
<html lang="en">
	<body>
		<%= render "/partials/menu" %>

		<div class="jumbotron">	
			<h1>Crear Vivero</h1>
		</div>	
		<div class="container">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/welcome/index">Inicio</a></li>
					<li class="breadcrumb-item"><a href="/nurseries">Viveros</a></li>
					<li class="breadcrumb-item active" aria-current="page">Crear vivero</li>
				</ol>
			</nav>
			<%= form_for @nurserie do |f| %>
				<% @nurserie.errors.full_messages.each do |message| %>
					<div class="be-red top-space">
						!!! <%= message %>
					</div>
				<% end %>
				<form>
					<div class="form-row">
						<div class="form-group col-sm-6">
							<label for="nombre">Nombre</label>
							<%= f.text_field :name, class: "form-control" %>
						</div>
						<div class="form-group col-sm-6">
							<label for="código">Código</label>
							<%= f.text_field :nursery_code, class: "form-control" %>
						</div>
						
						<div class="form-group col-sm-6">

							<label for="producto control">Productor</label>
							<% productores = [] %>
							<% @producer.each do |item| %>
							<% productores.push([item.name, item.id]) %>
							<% end %>
							<%= f.select :producer_id, productores, class: "form-control" %>
							
						</div>

						<div class="form-group col-sm-6">

							<label for="producto control">Departamento</label>
							<% departamentos = [] %>
							<% @department.each do |item| %>
							<% departamentos.push([item.name, item.id]) %>
							<% end %>
							<%= f.select :department_id, departamentos, class: "form-control" %>
							
						</div>
						<div class="form-group col-sm-6">

							<label for="producto control">Labor</label>
							<% labores = [] %>
							<% @labor.each do |item| %>
							<% labores.push([item.labor_type, item.id]) %>
							<% end %>
							<%= f.select :labor_type, labores, class: "form-control" %>
							
						</div>
						
						<div class="form-group col-sm-6">



						<%= f.submit "Crear", class: "btn btn-primary" %>
					</div>
				</form>
			<% end %>
		</div>


		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="node_modules/jquery/dist/jquery.min.js"></script>
		<script src="node_modules/popper.js/dist/popper.min.js"></script>
		<script src="node_modules/bootstrap/dist/js//bootstrap.min.js"></script>
	</body>
</html>