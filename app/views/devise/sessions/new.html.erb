<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box login">
      <h2 class="login-title">Iniciar sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
        <!--<%= f.label :email, "Correo" %><br />-->
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input", placeholder: "Correo" %>
        </div>
      
        <div class="field">
        <!--<%= f.label :password, "Contraseña" %><br />-->
          <%= f.password_field :password, autocomplete: "current-password", class: "login-input", placeholder: "Contraseña" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recordar" %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "Ingresar", class: "login-button" %>
        </div>
      <% end %>

      <div class="actions ">
        <%= render "devise/shared/links" %>
      </div>      
      <%= stylesheet_link_tag "registrations" %>
      
    </div>
  </div>
</div>
