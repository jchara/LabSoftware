<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box login">
      <h2 class="login-title">Regístrate</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>


        <div class="field">
        <!--<%= f.label :email, "Correo" %><br />-->
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-input", placeholder:"Correo" %>
        </div>

        <div class="field">
        <!--<%= f.label :password, "Contraseña" %>-->
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> caráctes mínimos)
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"login-input", placeholder:"Nueva Contraseña" %>
        </div>

        <div class="field">
        <!--<%= f.label :password_confirmation, "Contraseña" %><br />-->
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"login-input", placeholder:"Repetir Nueva Contraseña" %>
        </div>

        <div class="actions">
          <%= f.submit "Registrar", class:"login-button" %>
        </div>
      <% end %>

      <div class="actions ">
      <%= render "devise/shared/links" %>
      </div> 
      <%= stylesheet_link_tag "registrations" %>
    </div>
  </div>
</div>
